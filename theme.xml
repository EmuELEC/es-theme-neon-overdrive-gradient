<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>
   <include subset="cores" name="greenblue">./fundo/greenblue.xml</include>
    <include subset="cores" name="pinkblue">./fundo/pinkblue.xml</include>
	<include subset="cores" name="blue">./fundo/blue.xml</include>
	<include subset="cores" name="pinkgreen">./fundo/pinkgreen.xml</include>
	<include subset="cores" name="purple">./fundo/purple.xml</include>
	<include subset="cores" name="purplered">./fundo/purplered.xml</include>
	<include subset="cores" name="redblue">./fundo/redblue.xml</include>
	<include subset="cores" name="redgreen">./fundo/redgreen.xml</include>
	
	<include>./_inc/menu/menu.xml</include>

<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>horizontal</type>
        <pos>0.0 0.0</pos>
        <logoAlignment>middle</logoAlignment>         
        <size>1 1</size>
        <logoScale>2.0</logoScale>
        <zIndex>3</zIndex>          
        <logoSize>0.2 0.1</logoSize>
        <color>00000000</color>
        <maxLogoCount>3</maxLogoCount>       
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
      </image>                      
      <text name="systemInfo">     
         <pos>0.0 0.67</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
	     <fontSize>0.04</fontSize>
         <zIndex>5</zIndex>	     
      </text>            
   </view>
</feature>

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.03</fontSize>     
         <pos>0.4 0.948</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>  

   <view name="detailed,video,basic">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.023</fontSize>     
         <pos>0.009 0.955</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>  

   <view name="basic,detailed,video">
      <textlist name="gamelist">      
         <selectorColor>369bd3</selectorColor>
         <selectedColor>000000</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>369bd3</secondaryColor>
         <fontPath>./_inc/fonts/DJB Chalk It Up.ttf</fontPath>
         <fontSize>0.040</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound>./_inc/sounds/Move.wav</scrollSound>
         <zIndex>3</zIndex>                          
      </textlist>
   </view> 
   
   <view name="detailed,video">
      <textlist name="gamelist">                          
         <pos>0.025 0.025</pos>
         <size>0.38 0.9</size>
         <alignment>left</alignment>                       
      </textlist>
   </view>
   
   <view name="basic">
      <textlist name="gamelist">                          
         <pos>0.2 0.19</pos>
         <size>.6 0.74</size>
         <alignment>center</alignment>                       
      </textlist>
   </view>
   
   <view name="basic">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <zIndex>1</zIndex>          
      </image>                
   </view> 
    
   <view name="detailed,video">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <zIndex>1</zIndex>         
      </image>                
   </view>     
   
   <view name="detailed">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.75 0.66</pos>
         <maxSize>0.45 0.45</maxSize>
         <zIndex>2</zIndex>         
      </image>      
   </view>

   <view name="video">   
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.748 0.65</pos>
         <maxSize>0.5 0.5</maxSize>
         <delay>3</delay>
         <zIndex>2</zIndex>         
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>
      </video>             
   </view>
   
   <view name="detailed,video">
      <text name="md_lbl_releasedate, md_lbl_players, md_lbl_rating, md_rating, md_players, md_releasedate">
         <fontPath>./_inc/fonts/DJB Chalk It Up.ttf</fontPath>
         <fontSize>0.034</fontSize>
      </text>
      <text name="md_lbl_rating">
         <origin>0.5 0.5</origin>
         <pos>0.850 0.35</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>
      </text>   
      <rating name="md_rating">
         <origin>0.5 0.5</origin>       
         <pos>0.83 0.35</pos>
         <size>0.05 0.05</size>
         <zIndex>2</zIndex>
         <filledPath>./_inc/images/star_full.png</filledPath>
         <unfilledPath>./_inc/images/star_hollow.png</unfilledPath>
      </rating>
      <text name="md_lbl_players">
         <origin>0.5 0.5</origin>
         <pos>0.850 0.27</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex> 
      </text>
      <text name="md_players">
         <origin>0.5 0.5</origin>
         <pos>0.930 0.27</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>
      </text>
      <text name="md_lbl_releasedate">
         <origin>0.5 0.5</origin>
         <pos>0.850 0.31</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>                  
      </text>
      <datetime name="md_releasedate">
         <origin>0.5 0.5</origin>
         <pos>0.930 0.31</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>         
      </datetime>
      
   </view>
   
</theme>
